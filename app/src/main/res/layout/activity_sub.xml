<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SubActivity">

    <TextView
            android:text="할일등록하기"
            android:textSize="25dp"
            android:textColor="@android:color/holo_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="200dp"/>
    <TextView
            android:text="to1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/to1"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/to2" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.405"/>
    <TextView
            android:text="to2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/to2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" android:layout_marginEnd="108dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="전달할 메세지를 입력하세요"
            android:ems="10"
            android:id="@+id/editMessage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="100dp"/>
    <Button
            android:text="등록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnClose"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editMessage" android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
